<h1>Add a new staff person</h1>

<%= error_messages_for @user %>

<% form_for @user, :html => {:multipart => true} do |form| -%>
  <%= render :partial => form, :locals => { :show_password => true } %>
  <%= submit_tag 'Create Staff Member', :class => 'button' %>
  <%= link_to 'Back', users_path, :class => 'button' %>
<% end -%>
